/*
9. Leia uma matriz de 3 x 3 elementos.
   Calcule a soma dos elementos que estão abaixo da diagonal principal.
*/

#include <stdio.h>  // Biblioteca padrão para entrada e saída (printf, scanf)
#include <stdlib.h>

int main()
{

    int matriz[3][3];   // Declara a matriz 3x3 de inteiros
    int soma = 0;       // Variável para acumular a soma dos elementos abaixo da diagonal

    // ---------------------------------------------------------------
    // Leitura da matriz
    // ---------------------------------------------------------------
    printf("Digite os elementos da matriz 3x3:\n");

    for(int i = 0; i < 3; i++) // Percorre as linhas
    {
        for(int j = 0; j < 3; j++) // Percorre as colunas
        {
            printf("Elemento [%d][%d]: ", i, j);  // Mostra a posição atual
            scanf("%d", &matriz[i][j]);           // Lê o valor e armazena
        }
    }

    // ---------------------------------------------------------------
    // Cálculo da soma dos elementos abaixo da diagonal principal
    // ---------------------------------------------------------------
    // A condição "i > j" identifica os elementos abaixo da diagonal principal
    for(int i = 0; i < 3; i++) // Percorre as linhas
    {
        for(int j = 0; j < 3; j++) // Percorre as colunas
        {
            if(i > j) // Se a linha é maior que a coluna (abaixo da diagonal)
            {
                soma += matriz[i][j];    // Soma o valor ao acumulador
            }
        }
    }

    // ---------------------------------------------------------------
    // Impressão da matriz completa
    // ---------------------------------------------------------------
    printf("\nMatriz digitada:\n");
    for(int i = 0; i < 3; i++) // Percorre as linhas
    {
        for(int j = 0; j < 3; j++) // Percorre as colunas
        {
            printf("%4d", matriz[i][j]); // Imprime cada elemento com espaçamento fixo
        }
        printf("\n");                    // Quebra de linha a cada linha da matriz
    }

    // ---------------------------------------------------------------
    // Exibição do resultado final
    // ---------------------------------------------------------------
    printf("\nSoma dos elementos abaixo da diagonal principal = %d\n", soma);

    system("pause");
    return 0; // Finaliza o programa corretamente
}
